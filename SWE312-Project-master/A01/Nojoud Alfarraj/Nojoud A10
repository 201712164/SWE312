    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_jButton1ActionPerformed
   
          int  in= Integer.parseInt(inputtext.getText());     // Vague variable name  , the user input is not hidden 
          int  g = Integer.parseInt(guiss.getText());         // Vague variable name
        // Not defensive programming

        if(in==(g))
        {
           JOptionPane.showMessageDialog(null,"Second User Win","Title",1);
            count = 0; 
        }
        else if (in>g)
        {
            count++;
           JOptionPane.showMessageDialog(null,"The secret Number is bigger","Title",1); 
        }
        else
        {
            count++;
        
           JOptionPane.showMessageDialog(null,"The secret Number is smaller","Title",1);  
        }
        if (count>=6) // Magic Number
            // The user still can enter values (It doesn't stop the execution)
           JOptionPane.showMessageDialog(null,"First User Win","Title",1);
        
      
        
    }//GEN-LAST:event_jButton1ActionPerformed

